{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}